<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main row">
        
        <section class="main__tagging col-3" >
            <h2 id="tagHeader">Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="post">
                <fieldset id="tagfieldset">
                    <legend>Add a new GeoTag</legend>
               
                        <label class="item">Latitude: </label>
                        <input type="text" class="item" id="taglatinput" name="latval" placeholder="//e.g. 49.0124" value='<%= latval %>' readonly>
              
                        <label class="item">Longitude: </label>
                        <input type="text" class="item" id="taglonginput" name="longval" placeholder="//e.g. 42.013" value='<%= longval %>' readonly>
              
                        <label class="item">Name: </label>
                        <input type="text" class="item" id="tagnameinput" name="tagname" placeholder="e.g. Central Berlin" required minlength="1" maxlength="10">
               
                        <label class="item">Hashtag: </label>
                        <input type="text" class="item" id="taghashtaginput" name="hashtag" placeholder="e.g. #ber" pattern="#[A-Za-z]+" required minlength="2" maxlength="10">
                   
                        <input class="tagging_item" type="submit" id="tagbutton" value="Add Tag">

                </fieldset>
                <!-- ... your code here ... -->

            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery col-9">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post">
                <fieldset id="discoveryset">
                    <legend>Search</legend>
                        <label class="item">Search term or keywords: </label>
                        <input type="text" class="item" id="discoveryinput" name="searchbox" placeholder="e.g. Berlin">
                        <button class="item" id="discoverybutton" disabled>Search</button>
                        
                </fieldset>
                <!-- ... your code here ... -->
            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper">
                <div class="discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                </div>

                <div class="discovery__map" id="mapdiv">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="map"/>
                    <span id="resultMap">Result map</span>
                </div>
            </div>
            <table hidden>
                <label class="item" hidden>Latitude: </label>
                <input type="text" class="item" id="disclatinput" name="hiddenlatval" value="<%= latval %>" placeholder="//e.g. 49.0124" disabled hidden>
                <label class="item" hidden>Longitude: </label>
                <input type="text" class="item" id="disclonginput" name="hiddenlongval" value="<%= longval %>" placeholder="//e.g. 42.013" disabled hidden> 
            </table>
        </section>


    </main>

    <footer class="footer">
        <span id="footerspan">(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="./javascripts/geotagging.js"></script>
    
</body>

</html>